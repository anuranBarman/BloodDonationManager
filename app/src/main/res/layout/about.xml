<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About the Developer"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp" />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_gravity="center_horizontal"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/me"
        android:layout_marginTop="20dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/profile_tv_bg">
    <TableRow >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/lvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Anuran Barman"
            android:layout_marginRight="15dp"
            android:background="@drawable/profile_tv_bg"
            />
    </TableRow>
    <TableRow>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvUsername"
            android:padding="10dp"
            android:text="anuranbarman2k14@gmail.com"
            android:layout_marginRight="15dp"
            android:background="@drawable/profile_tv_bg"/>
    </TableRow>
    <TableRow>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvUseremail"
            android:text="www.anuranbarman.com"
            android:padding="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/profile_tv_bg"/>
    </TableRow>
    </TableLayout>
</LinearLayout>