<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Profile Information"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Name : Need Refresh"
            android:background="@drawable/profile_tv_bg"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/tvName"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="User Name : Need Refresh"
            android:background="@drawable/profile_tv_bg"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tvusername"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Email : Need Refresh"
            android:background="@drawable/profile_tv_bg"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tvemail"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Mobile : Need Refresh"
            android:background="@drawable/profile_tv_bg"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tvmobile"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Address : Need Refresh"
            android:background="@drawable/profile_tv_bg"
            android:padding="10dp"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:id="@+id/tvaddress"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Blood Group : Need Refresh"
            android:background="@drawable/profile_tv_bg"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tvblood"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Requests"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_margin="20dp" />
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/requestTable"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:padding="10dp"></TableLayout>
    </LinearLayout>

    </ScrollView>



</LinearLayout>